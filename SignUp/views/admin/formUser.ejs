<%- include('../includes/header.ejs')%>

    <body>
        <div class="container">
            <div class="left-section">
                <img src="images/FormTask.jpg" alt="Image">
            </div>
            <div class="right-section">
                <h1>Explore & Experience</h1>
                <h4>Get onto your most comfortable journey yet. All the way up</h4>
                <form action="/add-user" method="post">
                    <div class="form-group">
                        <input type="text" id="name" name="name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="E-mail" required>
                    </div>
                    <div class="form-group">
                        <input type="text" id="username" name="username" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" name="confirmPassword" placeholder="Confirm Password" required>
                    </div>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>

    </body>

